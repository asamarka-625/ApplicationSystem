server {
    server_name test.botifybiz.ru www.test.botifybiz.ru;
    
    expires -1;
    if_modified_since before;

    add_header Content-Security-Policy "";

    location /admin/ {
        proxy_pass http://localhost:8000;

        # Принудительно HTTPS
        proxy_set_header X-Forwarded-Proto https;
        proxy_set_header X-Forwarded-Scheme https;
        proxy_set_header Host $host;

        # Переписываем HTTP в HTTPS в контенте
        sub_filter 'http://' 'https://';
        sub_filter_once off;
        sub_filter_types text/css application/javascript;

        # Отключаем CSP для SQLAdmin
        add_header Content-Security-Policy "default-src * 'unsafe-inline' 'unsafe-eval'; script-src * 'unsafe-inline' 'unsafe-eval'; style-src * 'unsafe-inline'; img-src * data:; font-src * data:; connect-src *" always;
    }

    location /static/ {
        alias /var/www/ApplicationSystem/web_app/src/static/;
        #access_log off;
        add_header Cache-Control "public, immutable";
        autoindex off;
        client_max_body_size 8M;

        # Оптимизация доставки статики
        open_file_cache max=1000 inactive=20s;
        open_file_cache_valid 30s;
        open_file_cache_min_uses 2;
        open_file_cache_errors on;
    }
    
    location / {
        proxy_pass http://localhost:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
        # Таймауты
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
        send_timeout 60s;
        
        # Буферизация
        proxy_buffering on;
        proxy_buffer_size 4k;
        proxy_buffers 8 16k;
        proxy_busy_buffers_size 32k;
    }
    
    listen [::]:443 ssl http2 ipv6only=on;
    listen 443 ssl http2;
    
    # УБЕРИТЕ дублирующиеся ssl_protocols - они уже в options-ssl-nginx.conf
    ssl_certificate /etc/letsencrypt/live/test.botifybiz.ru/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/test.botifybiz.ru/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;
}

server {
    if ($host = www.test.botifybiz.ru) {
        return 301 https://$host$request_uri;
    }

    if ($host = test.botifybiz.ru) {
        return 301 https://$host$request_uri;
    }

    listen 80;
    listen [::]:80;
    server_name test.botifybiz.ru www.test.botifybiz.ru;
    return 404;
}